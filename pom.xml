		<plugin.maven-compiler.version>3.9.0</plugin.maven-compiler.version>
		<plugin.maven-shade.version>3.2.2</plugin.maven-shade.version>
		<plugin.maven-jar.version>3.2.2</plugin.maven-jar.version>
